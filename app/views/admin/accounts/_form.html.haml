= form_with(model: [ :admin, account ], local: true) do |form|
  - if account.errors.any?
    #error_explanation
      %h2
        = pluralize(account.errors.count, "error")
        prohibited this account from being saved:
      %ul
        - account.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :user
    = form.select(:user_id, UserHelper.user_id_name)
  .field
    = form.label :balance
    = form.text_field :balance
  .field
    = form.label :currency
    = form.text_field :currency
  .actions
    = form.submit
